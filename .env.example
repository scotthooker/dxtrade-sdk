# ============================================================================
# DXTRADE SDK CONFIGURATION EXAMPLE
# ============================================================================
# Copy this file to .env and configure with your broker's settings

# ============================================================================
# EXPLICIT URL CONFIGURATION (Recommended Approach)
# ============================================================================
# Authentication URLs
DXTRADE_LOGIN_URL=https://trading.example.com/api/login
DXTRADE_LOGOUT_URL=https://trading.example.com/api/logout
DXTRADE_REFRESH_TOKEN_URL=https://trading.example.com/api/refresh

# Market Data URLs
DXTRADE_QUOTES_URL=https://trading.example.com/api/quotes
DXTRADE_CANDLES_URL=https://trading.example.com/api/candles
DXTRADE_INSTRUMENTS_URL=https://trading.example.com/api/instruments/query
DXTRADE_MARKET_DATA_URL=https://trading.example.com/api/marketdata

# Account & Portfolio URLs
DXTRADE_ACCOUNT_URL=https://trading.example.com/api/account
DXTRADE_ACCOUNTS_URL=https://trading.example.com/api/accounts
DXTRADE_PORTFOLIO_URL=https://trading.example.com/api/portfolio
DXTRADE_BALANCE_URL=https://trading.example.com/api/balance
DXTRADE_METRICS_URL=https://trading.example.com/api/accounts/metrics
DXTRADE_POSITIONS_URL=https://trading.example.com/api/accounts/positions

# Trading URLs
DXTRADE_ORDERS_URL=https://trading.example.com/api/orders
DXTRADE_ORDERS_HISTORY_URL=https://trading.example.com/api/accounts/orders/history
DXTRADE_TRADES_URL=https://trading.example.com/api/trades
DXTRADE_HISTORY_URL=https://trading.example.com/api/history

# System URLs
DXTRADE_TIME_URL=https://trading.example.com/api/time
DXTRADE_STATUS_URL=https://trading.example.com/api/status
DXTRADE_VERSION_URL=https://trading.example.com/api/version
DXTRADE_CONVERSION_RATES_URL=https://trading.example.com/api/conversionRates

# WebSocket URLs (Complete URLs with format parameter)
DXTRADE_WS_MARKET_DATA_URL=wss://trading.example.com/ws/md?format=JSON
DXTRADE_WS_PORTFOLIO_URL=wss://trading.example.com/ws/?format=JSON

# ============================================================================
# AUTHENTICATION CREDENTIALS
# ============================================================================
DXTRADE_USERNAME=your_username
DXTRADE_PASSWORD=your_password
DXTRADE_DOMAIN=default
DXTRADE_ACCOUNT=your_account

# ============================================================================
# LEGACY SUPPORT (Optional - for backward compatibility)
# ============================================================================
DXTRADE_BASE_URL=https://trading.example.com/api
DXTRADE_WS_BASE_URL=wss://trading.example.com/ws

# ============================================================================
# CONFIGURATION SETTINGS
# ============================================================================
DXTRADE_ENVIRONMENT=demo
DXTRADE_TIMEOUT=30000
DXTRADE_USER_AGENT=dxtrade-sdk/1.0.0

# ============================================================================
# FEATURE FLAGS
# ============================================================================
DXTRADE_FEATURE_CLOCK_SYNC=true
DXTRADE_FEATURE_WEBSOCKET=true
DXTRADE_FEATURE_AUTO_RECONNECT=true
DXTRADE_FEATURE_RATE_LIMITING=true
DXTRADE_FEATURE_AUTOMATIC_RETRY=true

# ============================================================================
# WEBSOCKET CONFIGURATION
# ============================================================================
DXTRADE_WS_FORMAT=JSON
DXTRADE_WS_PING_INTERVAL=45
DXTRADE_WS_RECONNECT_ATTEMPTS=5
DXTRADE_WS_RECONNECT_DELAY=1.0

# ============================================================================
# RATE LIMITING CONFIGURATION
# ============================================================================
DXTRADE_RATE_LIMIT_ENABLED=true
DXTRADE_RATE_LIMIT_PER_SECOND=10
DXTRADE_RATE_LIMIT_PER_MINUTE=100
DXTRADE_RATE_LIMIT_BURST_SIZE=20

# ============================================================================
# RETRY CONFIGURATION
# ============================================================================
DXTRADE_RETRY_ENABLED=true
DXTRADE_RETRY_MAX_ATTEMPTS=3
DXTRADE_RETRY_BASE_DELAY=0.5
DXTRADE_RETRY_MAX_DELAY=30.0
DXTRADE_RETRY_JITTER=true

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
DXTRADE_LOG_LEVEL=INFO
DXTRADE_LOG_REQUESTS=false
DXTRADE_LOG_RESPONSES=false